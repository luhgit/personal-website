---
import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import ArrowCard from "@components/ArrowCard"
import StackCard from "@components/StackCard.astro"
import { SITE, SOCIALS } from "@consts"
import TwinklingStars from "@components/TwinklingStars.astro"
import MeteorShower from "@components/MeteorShower.astro"

const posts = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0,3)

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0,3)

const stack = [
  { 
    text: "Astro", 
    icon: "astro", 
    href: "https://astro.build" 
  },
  { 
    text: "Javascript", 
    icon: "javascript", 
    href: "https://www.javascript.com" 
  },
  { 
    text: "Typescript", 
    icon: "typescript", 
    href: "https://www.typescriptlang.org" 
  },
  { 
    text: "Tailwind", 
    icon: "tailwind", 
    href: "https://tailwindcss.com" 
  },
]
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>

  <!-- Light Mode: Particles -->
  <div class='absolute inset-0 block dark:hidden'>
    <div id='particles1' class='fixed inset-0'></div>
    <div id='particles2' class='fixed inset-0'></div>
    <div id='particles3' class='fixed inset-0'></div>
  </div>

  <!-- Dark Theme: Stars -->
  <div class='absolute inset-0 bg-black hidden dark:block'>
    <div id='stars1' class='fixed inset-0'></div>
    <div id='stars2' class='fixed inset-0'></div>
    <div id='stars3' class='fixed inset-0'></div>
  </div>

  <!-- Dark Theme: Twinkling Stars / Metors -->
  <div id="galaxy" class="fixed inset-0">
    <div class="hidden dark:block">
      <TwinklingStars/>
      <MeteorShower/>
    </div>
  </div>

  <script is:inline src="/js/bg.js"></script>
  
  <!-- HERO -->
  <section class="relative h-screen w-full">
    <div id="planetcont" class='animate absolute inset-0 top-1/4 overflow-hidden'>
      <div id="crescent" class='absolute top-0 left-1/2 -translate-x-1/2 w-[250vw] min-h-[100vh] aspect-square rounded-full p-[1px] bg-gradient-to-b from-black/25 dark:from-white/75 from-0% to-transparent to-5%'>
        <div id="planet" class='w-full h-full bg-white dark:bg-black rounded-full p-[1px] overflow-hidden flex justify-center'>
          <div id="blur" class='w-full h-20 rounded-full bg-neutral-900/25 dark:bg-white/25 blur-3xl'/>
        </div>
      </div>
    </div>
    <div class="animate absolute h-full w-full flex items-center justify-center">
      <div class='relative w-full h-full flex items-center justify-center'>
          <div class='p-5 text-center relative z-10 flex flex-col items-center gap-4'>

            <!-- Avatar -->
            <img
              src="/images/avatar_amit.jpeg"
              alt="Amit Tyagi"
              width="125"
              height="125"
              class="rounded-full ring-2 ring-white/70 shadow-[0_0_30px_-12px_rgba(255,255,255,0.6)]"
              loading="eager"
            />

            <!-- Greeting -->
            <p class="animated text-lg md:text-xl lg:text-2xl font-semibold text-neutral-500 dark:text-neutral-300">
              Hello, I am …
            </p>


            <!-- Name -->
            <p class="animated text-2xl md:text-3xl lg:text-4xl font-bold uppercase text-black dark:text-white">
              Amit
            </p>


            <!-- Tagline -->
            <p class="animated text-sm md:text-base lg:text-lg text-neutral-500 dark:text-neutral-300 max-w-2xl">
              Applied AI Researcher & Data Scientist (10+ yrs).  
              I build ML systems — from prompt engineering and fine-tuning  
              to evaluation, data analysis, and synthetic data generation in highly protected domains.
            </p>

            <!-- CTAs -->
            <div id="ctaButtons" class='animated flex flex-wrap gap-3 justify-center mt-4'>
              <a href='/projects'
                   class="py-2 px-4 rounded text-xs md:text-sm lg:text-base bg-black text-white dark:bg-white dark:text-black hover:opacity-80 transition-colors">
                View Projects
              </a>
              <a href='/work'
                class="py-2 px-4 rounded text-xs md:text-sm lg:text-base border border-neutral-600 text-neutral-800 dark:border-neutral-300 dark:text-neutral-200 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors">
                Work
              </a>
              <!-- <a href='https://newsletter.yourdomain.com'
                class='py-2 px-4 rounded text-xs md:text-sm lg:text-base border border-blue-500 text-blue-400 hover:bg-blue-500/10 blend'>
                Newsletter
              </a> -->
            </div>
      </div>
    </div>
  </section>

  <div class="relative bg-white dark:bg-black">
    <div class="mx-auto max-w-screen-sm p-5 space-y-24 pb-16">

      <!-- About Section -->
      <section class="animate">
        <article class="text-neutral-500 dark:text-neutral-200">
        <p>
          I am a <b>Lead Applied Scientist at Microsoft Healthcare & Life Sciences</b>, 
          building <b>end-to-end ML systems</b> that span prompt engineering, fine-tuning & scaling, 
          evaluation & benchmarking, and data analysis.
        </p>
        <p>
          In regulated domains like healthcare, I also use <i>synthetic data generation</i>, 
          de-identification, and surrogation to enable safe experimentation when real data cannot be used.
        </p>
        <p>
          My experience includes <b>multilingual clinical note generation</b>, 
          <b>autonomous driving scene analytics</b>, <b>RAG chatbots</b>, and 
          <b>demand forecasting platforms</b> — always with the aim of delivering reliable, 
          responsible AI that solves real problems.
        </p>
        <p>
          Currently, my main focus is <b>Dragon Copilot</b>, where I lead applied research on 
          <b>clinical note generation for the EU market</b>, with a strong emphasis on 
          <b>compliance, safety, and real-world adoption</b>.
        </p>
        </article>
      </section>

      <!-- Skills Section -->
      <section class="animate mt-8">
        <h2 class="text-lg font-bold mb-3">Skills</h2>
        <div class="grid gap-3 sm:grid-cols-3 text-sm">
          
          <div class="rounded-lg border p-4">
            <div class="font-semibold mb-1">ML Systems</div>
            <ul class="space-y-1 opacity-80">
              <li>Prompt engineering & orchestration</li>
              <li>Fine-tuning (LoRA/QLoRA, PEFT, SFT/RLHF), Quantization</li>
              <li>SLMs/LLMs (GPT-4, Phi4, Llama2, Mistral)</li>
              <li>PyTorch, HF Transformers</li>
            </ul>
          </div>

          <div class="rounded-lg border p-4">
            <div class="font-semibold mb-1">Evaluation & Safety</div>
            <ul class="space-y-1 opacity-80">
              <li>LLM/VLM Benchmarking</li>
              <li>Quality and Safety Evaluation Pipelines</li>
              <li>Toxicity, hallucination & omission metrics</li>
              <li>Responsible AI frameworks (EU AI Act, MDR)</li>
            </ul>
          </div>

          <div class="rounded-lg border p-4">
            <div class="font-semibold mb-1">Data & Infrastructure</div>
            <ul class="space-y-1 opacity-80">
              <li>Synthetic data for protected domains</li>
              <li>De-identification & surrogation</li>
              <li>Distributed training on A100 / DeepSpeed</li>
              <li>Azure ML, Spark, Databricks, Airflow</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Talks & Writing Section -->
      <section class="animate mt-12">
        <h2 class="text-lg font-bold mb-3">Talks & Writing</h2>
        <ul class="space-y-2 text-sm">
          <li><b>MLADS 2025, Redmond — </b><i>Anomaly Detection in Autonomous Driving: Scene Analytics</i></li>
          <li><b>MLADS 2023, Redmond — </b><i>OSS LLM benchmarking in real-world applications</i></li>
          <li><b>PyData Meetup 2025, Berlin — </b><i>Fine-tuning SLMs for Scene Analysis</i></li>
          <li><b>Essay — </b><i>Artificial Intelligence: Boon or Bane?</i> (230k+ reads, 29 Citations on <a href="https://www.researchgate.net/publication/307981242_Essay_Artificial_Intelligence_Boon_or_Bane" target="_blank" class="underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white">ResearchGate</a>)</li>
        </ul>
      </section>

      <!-- Project Preview Section -->
      <section class="animate">
        <div class="space-y-4">
          <div class="flex justify-between">
            <p class="font-semibold text-black dark:text-white">
              Recent projects
            </p>
            <a href="/projects" class="w-fit col-span-3 group flex gap-1 items-center underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend">
              <span class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend">
                All projects
              </span>
            </a>
          </div>
          <ul class="space-y-4">
            {projects.map((project) => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))}
          </ul>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="animate">
        <div>
          <p class="font-semibold text-black dark:text-white">
            Let's Connect
          </p>
          <p>
            Reach out to me on social media.
          </p>
          <div class="grid grid-cols-4 gap-y-2 mt-4 auto-cols-min">
            {SOCIALS.map(social => (
              <div class="col-span-1 flex items-center gap-1">
                <span class="whitespace-nowrap truncate">
                  {social.NAME}
                </span>
              </div>
              <div class="col-span-3 truncate">
                <a href={social.HREF} target="_blank" class="w-fit col-span-3 group flex gap-1 items-center underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend">
                  <span class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend">
                    {social.TEXT}
                  </span>
                </a>
              </div>
            ))}
        </div>
      </section>

      <!-- Blog Preview Section -->
      <section class="animate">
        <div class="space-y-4">
          <div class="flex justify-between">
            <p class="font-semibold text-black dark:text-white">
              Recent posts
            </p>
            <a href="/blog" class="w-fit col-span-3 group flex gap-1 items-center underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend">
              <span class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend">
                All posts
              </span>
            </a>
          </div>
          <ul class="space-y-4">
            {posts.map((post) => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))}
          </ul>
        </div>
      </section>

      <!-- Tech Stack Section
      <section class="animate">
        <div class="space-y-4">
          <p class="font-semibold text-black dark:text-white">
            Website build with
          </p>
          <div class="flex flex-wrap items-center gap-2 mt-5">
            {stack.map(item => (
              <StackCard 
                text={item.text}
                icon={item.icon}
                href={item.href}
              />
            ))}
          </div>
          <div>
            Performing reactivity and statefulness, special guest
            <a href="https://www.solidjs.com/" target="_blank" class="w-fit group underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend">
              <span class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend">
                SolidJS
              </span>
            </a>
          </div>
        </div>
      </section> -->

    </div>
  </div>
</PageLayout>
